void loop()
{
  // This sketch displays information every time a new sentence is correctly encoded.
  while (ss.available() > 0)
    if (gps.encode(ss.read()))
      displayInfo();

  if (millis() > 5000 && gps.charsProcessed() < 10)
  {
    //deteccion de error 01 para raspberry gps no encontrado
	Serial.print(F("INVALID 01"));
	//Serial.println(F("No GPS detected: check wiring."));
    while(true);
  }
}

void displayInfo()
{
  Serial.print(F("Location: ")); 
  if (gps.location.isValid())
  {
	//LATITUD,LONGITUD para raspberry
    Serial.print("GPS : ");
	Serial.print(gps.location.lat(), 6);Serial.print(F(","));Serial.print(gps.location.lng(), 6);
  }
  else
  {
    //deteccion de error 02 para raspberry gps no envia datos
	Serial.print(F("INVALID 02"));
  }

  Serial.print(F("Date/Time: "));
  if (gps.date.isValid())
  {
    Serial.print(gps.date.month());
    Serial.print(F("/"));
    Serial.print(gps.date.day());
    Serial.print(F("/"));
    Serial.print(gps.date.year());
  }
  else
  {
    //deteccion de error 03 para raspberry gps no envia fecha y hora
	Serial.print(F("INVALID 03"));
  }

  Serial.print(F(" "));
  if (gps.time.isValid())
  {
    if (gps.time.hour() < 10) Serial.print(F("0"));
    Serial.print(gps.time.hour());
    Serial.print(F(":"));
    if (gps.time.minute() < 10) Serial.print(F("0"));
    Serial.print(gps.time.minute());
    Serial.print(F(":"));
    if (gps.time.second() < 10) Serial.print(F("0"));
    Serial.print(gps.time.second());
    Serial.print(F("."));
    if (gps.time.centisecond() < 10) Serial.print(F("0"));
    Serial.print(gps.time.centisecond());
  }
  else
  {
	//deteccion de error 04 para raspberry gps resuelve datos para completar el registro con 00:00:00
    Serial.print(F("INVALID 04"));
  }

  Serial.println();
}
